    "@vitejs/plugin-react": "^4.5.1",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-extension-installer": "^1.2.0",
    "eslint": "^9.28.0",
    "package-up": "^5.0.0",
    "postcss": "^8.5.4",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "react-devtools": "^6.1.2",
