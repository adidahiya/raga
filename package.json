{
    "name": "root",
    "private": true,
    "packageManager": "yarn@4.0.2",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "yarn lerna run build",
        "dist": "yarn lerna run dist",
        "format": "prettier --write \"./**/*.{js,json,md,scss,ts,tsx,yaml,yml}\"",
        "format-check": "prettier --check \"./**/*.{js,json,md,scss,ts,tsx,yaml,yml}\"",
        "lint": "yarn lerna run lint"
    },
    "devDependencies": {
        "@yarnpkg/types": "^4.0.0",
        "lerna": "^8.0.0",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=18.18"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:adidahiya/music-library-scripts.git"
    }
}
